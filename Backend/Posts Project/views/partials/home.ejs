<main>
  <%- include('./header.ejs') %>
  <% if (blogList.length < 1) { %>
   <h1 class="no-blog-title">
    You don't have any blogs yet. Please visit <br />the home page to create a new blog
   </h1>
  <% } else {%>
    <h1 class="title">Your Blogs</h1>
  <% } %>
    <div class="overflow-div">
      <div class="home-container">
        <% for (let index = 0; index < blogList.length; index++) {%>
          <div class="blog-card">
            <span class="blog-number">
              <%= index+ 1 %>
            </span>
            <h4>
              <%= blogList[index].title %>
            </h4>
            <p>
              <%= blogList[index].description?.slice(0,300)%>
              <% if (blogList[index].description?.length < 299) { %>
                <a href="/blogDetails/<%= blogList[index].id%>" class="view-btn">View Blog</a>
              <% } %>
            </p>
            <div class="btn-wrapper">
              <form action="/delete/<%= blogList[index].id %>" method="post">
                <button class="delete-btn">Delete</button>
              </form>
              <a href="/edit/<%= blogList[index].id %>" class="edit-btn">Edit</a>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  <%- include('./footer.ejs') %>
</main>
